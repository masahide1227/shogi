<!DOCTYPE html>
<html>
  <head>
    <title>Shogi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <% if user_signed_in? %> 
    <header>
    <!-- ハンバーガーメニュー -->
      <div class="menu-container">
        <button id="menu-toggle" class="menu-button">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </button>
        <nav id="menu" class="menu hidden">
         <ul>
          <li><%= link_to "トップ", root_path, class: "text-white nav-link" %></li>
          <li><%= link_to "投稿する", new_post_path, class: "text-white nav-link" %></li>
          <li><%= link_to "投稿一覧", posts_path, class: "text-white nav-link" %></li>
          <li><%= link_to "下書き一覧", confirm_posts_path, class: "text-white nav-link" %></li>
          <li><%= link_to "ユーザ一覧", users_path, class: "text-white nav-link" %></li>
          <li><%= link_to "マイページ", user_path(current_user.id), class: "text-white nav-link" %></li>
          <li><%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-white nav-link" %></li>
         </ul>
        </nav>
     </div>

    <!-- 通常のメニュー（PC用） -->
      <nav class="pc-nav">
        <div><%= link_to root_path, class: "text-white nav-link" do %>shogi player<% end %></div>
        <%= link_to "トップ", root_path, class: "text-white nav-link" %>
        <%= link_to "投稿する", new_post_path, class: "text-white nav-link" %>
        <%= link_to "投稿一覧", posts_path, class: "text-white nav-link" %>
        <%= link_to "下書き一覧", confirm_posts_path, class: "text-white nav-link" %>
        <%= link_to "ユーザ一覧", users_path, class: "text-white nav-link" %>
        <%= link_to "マイページ", user_path(current_user.id), class: "text-white nav-link" %>
        <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-white nav-link" %>
      </nav>
    </header>
  <% end %>
  <%= yield %>
</body>
</html>
