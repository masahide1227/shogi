<div class="row mt-5">
  <% users.each do |user| %>
    <div class="one-post card mt-3">
      <%= link_to user_path(user) do %>
        <div class="d-flex">
          <%= attachment_image_tag user, :profile_image, size: '50x50', fallback: "no_image.svg", class: "mt-3 profile-img" %>
          <div class="user-info">
            <p class="caption h4 mt-4"><%= user.name %></p>
            <p class="caption"><%= "#{user.posts.published.count} 投稿" %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<%= paginate users %>
